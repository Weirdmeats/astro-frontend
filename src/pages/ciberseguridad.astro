---
import ParrafoComponent from "../components/ParrafoComponent.astro"
import TitleH1Component from "../components/TitleH1Component.astro"
import TitleH2Component from "../components/TitleH2Component.astro"
import TitleH3Component from "../components/TitleH3Component.astro"
import Layout from "../layouts/Layout.astro"
---

<Layout>
    <main class="w-full">
        <div class="w-full">
        <div style="background-image: url('https://www.esic.edu/sites/default/files/2024-07/que%20es%20la%20ciberseguridad.jpg') ;" class="bg-center w-full h-[300px] bg-cover bg-black/50 bg-blend-multiply">
			<div class="justify-items-center items-center justify-center pt-18 p-40">
                <TitleH1Component estilo="font-bold text-6xl text-center text-white" texto="Ciberseguridad" />
                <TitleH2Component estilo="font-semibold text-3xl text-white text-center" texto="Facilidad y compatibilidad de la seguridad con inteligencia artificial, como nos puede ayudar dia con dia" />
			
			</div>

		</div>
	
        </div>

         <div class="w-full bg-linear-to-r from-blue-400 to-blue-500">
                <div class="p-5">
                     <TitleH2Component estilo="font-semibold text-3xl text-white text-center" texto="Existen una variedad de accesorios tanto informaticos como de IA" />
                </div>
                <div class="bg-linear-to-r from-blue-400 to-cyan-500">
            <div class="items-center ">
                <div class="grid grid-cols-3 place-items-center p-10 w-full gap-10">
                    <div class=" w-full h-[350px] bg-white p-5 text-center items-center">
                        <TitleH3Component estilo=" " texto="TEXTO"/>
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRy1f6bFFtRQR7c20J2WXF8YMjwLl_grzFtiA&s" alt="" class="w-full h-50 rounded">
                    <ParrafoComponent estilo="text-black bg-red-900 p-1" texto="text" />
                    </div>


                    <div class=" w-full h-[350px] bg-black p-5 text-center">
                        <TitleH3Component estilo=" " texto="TEXTO"/>
                        <img src="https://tecnologia-informatica.com/wp-content/uploads/2018/12/que-son-los-gadgets-2.jpeg" alt="" class="w-full h-50 rounded">

                    </div>

                    <div class="w-full h-[350px] bg-gray-300 p-5 text-center">
                        <TitleH3Component estilo="text-white " texto="TEXTO"/>
                        <img src="https://computerworldmexico.com.mx/wp-content/uploads/2024/09/%C2%BFQue-gadgets-son-mas-comunes.png" alt="" class="w-full h-50 rounded">

                    </div>

                </div>
            </div>
    </main>
    
</Layout>